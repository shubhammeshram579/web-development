<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-zinc-500" href="/">Create User</a>
        <h1 class="py-10 mb-10">All User</h1>
        <div class="flex gap-3 flex-wrap">
           <% if(users.length > 0){ %>
            <% users.forEach(function(user){ %>
                <div class="user max-w-72 p-4 bg-zinc-800 rounded-lg ">
                    <div class="w-full h-50 rounded-lg bg-red-900 overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%= user.image %>"
                            alt="">
    
                    </div>
                    <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                    <h3 class="text-zinc-500"><%= user.email %></h3>
                    <div class="flex gap-3 py-2">
                        <a class="text-zinc-300" href="/edit/<%= user._id %> ">Edit User</a>
                        <a class="text-red-500" href="/delete/<%= user._id %> ">Delete User</a>
    
                    </div>
                </div>

           <% }) %>


            <% }else{ %>
                <h3>Not user at</h3>

            <%} %>
           
            
        </div>

    </div>

</body>

</html>