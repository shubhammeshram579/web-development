    <div class="page2">
        <form id="form" action="/bespoke" method="post">
            <div class="part1">
                <p>First-Name <span>*</span><input type="text" name="firstname" id="firstname" placeholder="shubham"
                        required></p>
                <p>last-name<span>*</span><input type="text" name="lastname" id="lastname" placeholder="Meshram"
                        required></p>
                <p>company<input type="text" name="company" id="company"></p>
            </div>
            <div class="pard4">
                <p>Email <span>*</span><input type="email" name="email" id="email" placeholder="shubhcode97@gmail.com"
                        required></p>
                <div id="mobileAndDate">
                <p>Phone-number<input type="number" name="phonenumber" id="phonenumber" placeholder="7038956822"></p>
                <p>Event-date<input type="date" name="date" id="date"></p>
            </div>
            </div>
            <div class="part2">
                <p>Number of gest<input type="number" name="numberofgest" id="number-of-gest"></p>
                <p>Event address <textarea name="address" id="address" cols="125" rows="3"></textarea></p>
            </div>
            <div class="part3">
                <p>Suburb <input type="text" name="suburb" id="suburb"></p>
                <p>state <select name="state" id="state">
                        <option value="#">--select state--</option>
                        <option value="MH">MH</option>
                        <option value="CG">CG</option>
                        <option value="AP">AP</option>
                    </select></p>
                <p>Postcode <input type="number" name="pastcode" id="pastcode"></p>
            </div>
            <div class="part5">
                <p>your marssage <textarea name="massage" id="massage" cols="30" rows="10"></textarea></p>
                <p id="checkbox"><input type="checkbox" name="checkbox" id="checkbox"> Email me offers and promotions from Two Good
                    Co.</p>

            </div>

            <input type="submit" value="Send Enquery" id="butten">

        </form>
    </div>

    <script>
        // Wait for the DOM to load
        document.addEventListener('DOMContentLoaded', () => {
            const flashMessage = document.getElementById('flash-message');
            if (flashMessage) {
                // Hide the message after 5 seconds
                setTimeout(() => {
                    flashMessage.style.opacity = '0';
                }, 5000);

                // Remove the message from the DOM after the fade-out
                setTimeout(() => {
                    flashMessage.remove();
                }, 6000); // 1s after opacity change to ensure smooth transition
            }
        });
    </script>


