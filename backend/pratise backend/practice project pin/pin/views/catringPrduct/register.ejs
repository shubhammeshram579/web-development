    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheets/register.css">

    <!-- regiser home page img -->
    <div class="page1">
        <img src="https://az727718.vo.msecnd.net/c34bf49efec4419a808454d753e542b5/images/d3b249074f2d48c89939f0c1e399cf29_1728w.jpg"
            alt="">
    </div>

    <!-- rigister page -->
    <div class="page2">

        <!-- register form -->
        <form action="/register" method="post">
            <h1>CONTACT DETAILS</h1>

            <!-- user name and last name -->
            <div class="part1">
                <div class="card1">
                    <p>First-Name <span>*</span><input type="text" name="first_name" id="first_name"
                            placeholder="shubham" required></p>
                    <p>last-name<span>*</span><input type="text" name="last_name" id="last_name" placeholder="Meshram"
                            required></p>
                </div>

                <div class="card2">
                    <p>Phone-number<input class="mobile" type="number" name="phone_number" id="phone-number"
                            placeholder="7038956822"></p>
                    <p id="Email">Email<span>*</span><input type="email" name="email" id="email"
                            placeholder="shubhcode97@gmail.com" required></p>

                </div>
                <p>company<input type="text" name="company" id="company"></p>
            </div>



            <!-- user address details -->
            <div class="part2">
                <h1>ADDRESS</h1>
                <div class="card1">
                    <p>Event address <textarea name="address" id="address" cols="25" rows="3"></textarea></p>
                    <p class="Suburb">Suburb <input type="text" name="Suburb" id="Suburb"></p>
                </div>
                <div class="card2">
                    <p>Country <select name="country" id="country">
                            <option value="#">--select country--</option>
                            <option value="India">India</option>
                            <option value="USA">USA</option>
                            <option value="UK">UK</option>
                        </select></p>
                    <p class="state">state <select name="state" id="state">
                            <option value="#">--select state--</option>
                            <option value="MH">MH</option>
                            <option value="CG">CG</option>
                            <option value="AP">AP</option>
                        </select></p>
                </div>

                <p>Postcode <input type="number" name="pastcode" id="pastcode"></p>
            </div>


            <!-- ratio of selection  -->
            <div class="part3">
                <h1>INVOICE ADDRESS</h1>
                <h5>Same As Above*</h5>
                <div class="ratio">
                    <p>Yes<input type="radio" name="radio" id="yes"></p>
                    <p>No<input type="radio" name="radio" id="no"></p>
                </div>

            </div>

            <!-- username and password set -->
            <div class="part4">
                <h1>ACCOUNT</h1>
                <p>username <input type="text" name="username" id="username"></p>
                <p>password <input type="password" name="password" id="password"></p>

            </div>



            <!-- buttens -->
            <div class="part5">
                <p>To help protect your privacy, passwords must be at least 8 characters long and contain letters &
                    numbers.
                </p>
                <input style="background-color: #111;color: #fff; border-radius: 10px;" type="submit"
                    value="Create Account" id="btn">
                <input style="background-color: #111;color: #fff; border-radius: 10px;" type="reset" value="Cancel"
                    id="btn">
            </div>

        </form>
    </div>


